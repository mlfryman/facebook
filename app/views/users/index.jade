extends ../shared/template
block content
  .container
    #banner.page-header
      .row
        .col-xs-12
          h1#header Public Users
    .row
      .col-xs-9
        table.table.table-striped.table-hover.table-bordered
          thead
            tr
              th Email
              th Phone
              th Facebook
              th Twitter
          body
            each user in users
              tr
                td: a(href='/users/#{user.email}')= user.email
                td= user.phone
                td: a(href=user.facebook, target='_blank')= user.facebook
                td: a(href=user.twitter, target='_blank')= user.twitter
block scripts
